<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Статус системы - полная ширина -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeColor="#00E5FF"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Заголовок с бейджем -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="СТАТУС СИСТЕМЫ"
                        android:textColor="#00E5FF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvStatusBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ОСТАНОВЛЕН"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="#6B7280"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp" />
                </LinearLayout>

                <!-- Сетка параметров 2x2 -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2">

                    <!-- Температура -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:background="#0F172A"
                        android:padding="14dp"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Температура"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp"
                            android:layout_marginBottom="6dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/tvTemperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textColor="#00E676"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="°C"
                                android:textColor="#9CA3AF"
                                android:textSize="16sp"
                                android:layout_marginStart="6dp"
                                android:layout_marginBottom="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Давление -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:background="#0F172A"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Давление"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp"
                            android:layout_marginBottom="6dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/tvPressure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="140.0"
                                android:textColor="#00E676"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="бар"
                                android:textColor="#9CA3AF"
                                android:textSize="16sp"
                                android:layout_marginStart="6dp"
                                android:layout_marginBottom="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Мощность -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:background="#0F172A"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Мощность"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp"
                            android:layout_marginBottom="6dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/tvPower"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#00E5FF"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:textColor="#9CA3AF"
                                android:textSize="16sp"
                                android:layout_marginStart="6dp"
                                android:layout_marginBottom="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- k-eff -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:background="#0F172A"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="k-eff"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/tvKEff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.000"
                            android:textColor="#00E676"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace" />
                    </LinearLayout>

                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Активная зона и График (горизонтально) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Активная зона -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="#00E5FF"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="АКТИВНАЯ ЗОНА"
                        android:textColor="#00E5FF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.atomicbalance.ui.dashboard.NeutronView
                        android:id="@+id/neutronView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#0F172A" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- График нейтронов -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="#00E5FF"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ПЛОТНОСТЬ НЕЙТРОНОВ"
                        android:textColor="#00E5FF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/neutronChart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#0F172A" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Кнопка Старт/Пауза -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartPause"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ПУСК"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#16A34A"
            app:cornerRadius="12dp"
            app:iconGravity="textStart"
            app:iconSize="28dp" />

    </LinearLayout>
</ScrollView>