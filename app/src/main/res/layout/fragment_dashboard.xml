<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Статус системы - полная ширина -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeColor="#00E5FF"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Заголовок с бейджем -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="СТАТУС СИСТЕМЫ"
                        android:textColor="#00E5FF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvStatusBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ОСТАНОВЛЕН"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="#6B7280"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp" />
                </LinearLayout>

                <!-- Сетка параметров 2x2 -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2">

                    <!-- Температура -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:background="#0F172A"
                        android:padding="14dp"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Температура"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp"
                            android:layout_marginBottom="6dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/tvTemperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textColor="#00E676"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace"
                                android:maxLines="1"
                                android:ellipsize="none" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="°C"
                                android:textColor="#9CA3AF"
                                android:textSize="16sp"
                                android:layout_marginStart="6dp"
                                android:layout_marginBottom="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Давление -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:background="#0F172A"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Давление"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp"
                            android:layout_marginBottom="6dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/tvPressure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="140.0"
                                android:textColor="#00E676"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace"
                                android:maxLines="1"
                                android:ellipsize="none" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="бар"
                                android:textColor="#9CA3AF"
                                android:textSize="16sp"
                                android:layout_marginStart="6dp"
                                android:layout_marginBottom="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Мощность -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:background="#0F172A"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Мощность"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp"
                            android:layout_marginBottom="6dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/tvPower"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#00E5FF"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace"
                                android:maxLines="1"
                                android:ellipsize="none" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:textColor="#9CA3AF"
                                android:textSize="16sp"
                                android:layout_marginStart="6dp"
                                android:layout_marginBottom="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Реактивность (k-eff/rho) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:background="#0F172A"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Реактивность"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/tvKEff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0000"
                            android:textColor="#00E676"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:maxLines="1"
                            android:ellipsize="none" />
                    </LinearLayout>

                </GridLayout>

                <!-- Нейтронный поток (под параметрами) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#0F172A"
                    android:padding="14dp"
                    android:layout_marginTop="12dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Нейтронный поток"
                        android:textColor="#9CA3AF"
                        android:textSize="14sp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvNeutronFlux"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.000e+00"
                        android:textColor="#00E5FF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:maxLines="1"
                        android:ellipsize="none" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Активная зона и График (горизонтально) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Активная зона -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="#00E5FF"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="АКТИВНАЯ ЗОНА"
                        android:textColor="#00E5FF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.atomicbalance.ui.dashboard.NeutronView
                        android:id="@+id/neutronView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#0F172A" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- График нейтронов -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="#00E5FF"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ПЛОТНОСТЬ НЕЙТРОНОВ"
                        android:textColor="#00E5FF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/neutronChart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#0F172A" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Стержни регулирования -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeColor="#00E5FF"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Заголовок карточки -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="СТЕРЖНИ РЕГУЛИРОВАНИЯ"
                        android:textColor="#00E5FF"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Слайдер с метками -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Вставлено"
                            android:textColor="#9CA3AF"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRodsDashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textColor="#00E5FF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Извлечено"
                            android:textColor="#9CA3AF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderRodsDashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="100"
                        android:value="50"
                        android:stepSize="1"
                        app:thumbColor="#00E5FF"
                        app:trackColorActive="#00E5FF"
                        app:trackColorInactive="#334155"
                        app:thumbRadius="12dp"
                        app:trackHeight="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Элементы управления в сетке 2 колонки -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="16dp">

            <!-- Первичный контур -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="#00E5FF"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Заголовок карточки -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Контур 1"
                            android:textColor="#00E5FF"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Слайдер с метками -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Насос"
                                android:textColor="#9CA3AF"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvPrimaryPumpsDashboard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50%"
                                android:textColor="#00E5FF"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace" />
                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderPrimaryPumpsDashboard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="0"
                            android:valueTo="100"
                            android:value="50"
                            android:stepSize="1"
                            app:thumbColor="#00E5FF"
                            app:trackColorActive="#00E5FF"
                            app:trackColorInactive="#334155"
                            app:thumbRadius="12dp"
                            app:trackHeight="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Вторичный контур -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="#00E5FF"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Заголовок карточки -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Контур 2"
                            android:textColor="#00E5FF"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Слайдер с метками -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Насос"
                                android:textColor="#9CA3AF"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSecondaryPumpsDashboard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50%"
                                android:textColor="#00E5FF"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace" />
                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderSecondaryPumpsDashboard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="0"
                            android:valueTo="100"
                            android:value="50"
                            android:stepSize="1"
                            app:thumbColor="#00E5FF"
                            app:trackColorActive="#00E5FF"
                            app:trackColorInactive="#334155"
                            app:thumbRadius="12dp"
                            app:trackHeight="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Сброс пара -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="#00E5FF"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Заголовок карточки -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Пар"
                            android:textColor="#00E5FF"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Слайдер с метками -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Клапан"
                                android:textColor="#9CA3AF"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSteamDumpDashboard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="#00E5FF"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace" />
                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderSteamDumpDashboard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="0"
                            android:valueTo="100"
                            android:value="0"
                            android:stepSize="1"
                            app:thumbColor="#00E5FF"
                            app:trackColorActive="#00E5FF"
                            app:trackColorInactive="#334155"
                            app:thumbRadius="12dp"
                            app:trackHeight="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Кнопка Старт/Пауза -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartPause"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ПУСК"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#16A34A"
            app:cornerRadius="12dp"
            app:iconGravity="textStart"
            app:iconSize="20dp" />

    </LinearLayout>
</ScrollView>